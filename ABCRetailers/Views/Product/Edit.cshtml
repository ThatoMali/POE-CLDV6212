
@model ABCRetailers.Models.Product
<h2 class="mb-3">Edit Product</h2>
<form method="post" enctype="multipart/form-data" class="card p-3">
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />
    <div class="mb-3">
    <label asp-for="ProductName" class="form-label"></label>
    <input asp-for="ProductName" class="form-control" />
    <span asp-validation-for="ProductName" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Description" class="form-label"></label>
    <textarea asp-for="Description" rows="3" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="Price" class="form-label"></label>
    <input asp-for="Price" class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>
<div class="mb-3">
    <label asp-for="StockAvailable" class="form-label"></label>
    <input asp-for="StockAvailable" class="form-control" />
    <span asp-validation-for="StockAvailable" class="text-danger"></span>
</div><div class="mb-3">
        <label class="form-label">Replace Image</label>
        <input type="file" name="image" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="form-text">Current: <img src="@Model.ImageUrl" style="height:60px" class="rounded ms-2" /></div>
        }
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-primary">Save</button>
        <a class="btn btn-outline-secondary" href="/Product">Cancel</a>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}