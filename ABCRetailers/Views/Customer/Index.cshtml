@model List<ABCRetailers.Models.Customer>
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Customers</h2>
    <a class="btn btn-primary" href="/Customer/Create">Add Customer</a>
</div>
<div class="card">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Name @c.Surname</td>
                    <td>@c.Username</td>
                    <td>@c.Email</td>
                    <td>@c.ShippingAddress</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" href="/Customer/Edit/@c.RowKey">Edit</a>
                        <form method="post" action="/Customer/Delete/@c.RowKey" class="d-inline" onsubmit="return confirm('Delete this customer?');">
                            <button class="btn btn-sm btn-outline-danger" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>